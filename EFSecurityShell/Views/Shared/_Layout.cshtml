<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GMU Admission</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar  navbar-fixed-top">
        <div class="d-flex align-center">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" title="List View" class="links">
                    <img alt="List View" src="@Url.Content("~/images/mason-logo - Copy (1).png")">
                </a>


            </div>
            <div class="navbar-collapse container collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Apply", "Create", "Applicants")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Admin Actions<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
                            <li>@Html.ActionLink("Applicants", "Index", "Applicants")</li>
                            <li>@Html.ActionLink("Majors", "Index", "Interests")</li>
                            <li>@Html.ActionLink("Reviews", "Index", "Reviews")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="push"></div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>George Mason University </h1>
                    <address class="white">
                        4400 University Dr,<br />
                        Fairfax, VA 22030<br />
                        <abbr title="Phone">P:</abbr>
                        703.993.1000
                    </address>
                    <br /><br /><br />
                       <p>Disclaimer: This website is created for educational purposes. The contents of this website are from www.gmu.edu.</p>
                </div>

                <div class="col-md-6">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3108.1156667052564!2d-77.30954928465158!3d38.82981177958125!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b64e607b427ebd%3A0xd766a653e6557544!2sGeorge%20Mason%20University!5e0!3m2!1sen!2sus!4v1606652839207!5m2!1sen!2sus" width="400" height="350" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - George Mason University</p>
        </div>
      
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
